<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lp.german.bischofshofpresenter.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NeuesPraesentationActivity"
            android:label="@string/title_activity_neues_projekt" >
        </activity>
        <activity
            android:name=".GespeichertePraesentationenActivity"
            android:label="@string/title_activity_projekt_bearbeiten" >
        </activity>
        <activity
            android:name=".EinstellungenActivity"
            android:label="@string/title_activity_einstellungen" >
        </activity>
        <activity
            android:name=".PraesentationsActivity"
            android:label="@string/title_activity_praesentations" >
        </activity>
        <activity
            android:name=".SchnellzugriffActivity"
            android:label="@string/title_activity_projekt_liste_aktivity" >
        </activity>
        <activity
            android:name=".SlideUpMenu"
            android:label="@string/title_activity_slide_up_menu"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" >
        </activity>
        <activity
            android:name=".SchnellzugriffDateiansichtActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_schnellzugriff_dateiansicht"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".SimpleFileViewActivity"
            android:label="@string/title_activity_simple_pdfview" >
        </activity>


    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
